{
  "settings": {
    "index": {
      "refresh_interval" : -1,
      "number_of_shards": {{ target_index_primary_shards }},
      "number_of_replicas": {{ target_index_replica_shards }}
    }
  },
  "mappings": {
    "properties": {
      "target_field": {
        "type": "dense_vector",
        "dims": {{ target_index_dimension }},
        "index": true,
        "similarity": "l2_norm",
        "index_options": {
          "type": "hnsw",
          "m": {{ hnsw_m }},
          "ef_construction": {{ hnsw_ef_construction }}
        }
      }
    }
  }
}

